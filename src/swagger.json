            "description": "Rota responsável pela criação de um novo usuário",
            "tags": ["Users"],
            "requestBody": {
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/User"
                  },
                  "examples": {
                    "Users": {
                      "value": {
                        "name": "Donquixote",
                        "username": "Don",
                        "email": "don@gmail.com",
                        "password": "123456",
                        "avatar": "https://i.imgur.com/Ry1cb5M.png"
                      }
                    }
                  }
                }
              }
            },
            "responses": {
              "400": {
                "description": "Not Found"
              },
              "201": {
                "description": "Created",
